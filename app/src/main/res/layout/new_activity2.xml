<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity2a"
    android:background="#A9A9A9"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:background="#A9A9A9"
        tools:context="com.ariz.ador.project115v3.MainActivity">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:src="@drawable/orderhere"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/frappe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/frapmenu" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/van"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="top|right"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/van" />

            <ImageButton
                android:id="@+id/caramel"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/caramel"
                android:scaleType="fitXY"
                android:padding="0dp"/>

            <ImageButton
                android:id="@+id/maple"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/maple"
                android:padding="0dp"

                android:scaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/straw"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/straw"

                android:scaleType="fitXY"
                android:padding="0dp"/>

            <ImageButton
                android:id="@+id/matcha"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/matcha"

                android:scaleType="fitXY"
                android:padding="0dp"/>


        </LinearLayout>
    </LinearLayout>
</ScrollView>